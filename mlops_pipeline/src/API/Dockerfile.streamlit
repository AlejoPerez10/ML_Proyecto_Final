FROM python:3.11-slim

RUN apt-get update && apt-get install -y \
    build-essential \
    gcc \
    g++ \
    libffi-dev \
    libssl-dev \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

# Copiar requirements.txt desde la ra√≠z del proyecto
COPY requirements.txt .

RUN pip install --no-cache-dir -r requirements.txt

# Copiar todo mlops_pipeline/ al contenedor
COPY mlops_pipeline/ ./mlops_pipeline/

EXPOSE 8501

CMD ["bash", "-lc", "python mlops_pipeline/src/model_monitoring.py && streamlit run mlops_pipeline/src/streamlit_app.py --server.port=8501 --server.address=0.0.0.0 --server.headless=true"]